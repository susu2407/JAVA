package sub2;

import java.io.BufferedInputStream;
import java.io.BufferedOutputStream;
import java.io.FileInputStream;
import java.io.FileNotFoundException;
import java.io.FileOutputStream;
import java.io.IOException;

public class BufferStreamTest {
	 public static void main(String[] args) {
	        // 스트립 생성(파일 연결)
	        String source = "C:\\Users\\GGG\\Desktop\\Person.txt";
	        String target = "C:\\Users\\GGG\\Desktop\\Person2.txt";

	        try {
	            // 기본 스트림 생성(파일 연결)
	            FileInputStream fis = new FileInputStream(source);
	            FileOutputStream fos = new FileOutputStream(target);

	            // 보조 스트립(Buffer) 생성
	            BufferedInputStream bis =  BufferedInputStream(fis);
	            BufferedOutputStream bos = BufferedOutputStream(fos);
	            
	            while (true) {
	                int data = fis.read();   // char

	                if (data == -1)  break;


	                fos.write(data); // 바이트 스트림 쓰기
	            }

	            fis.close();
	            fos.close();


	        } catch (FileNotFoundException e) {
	            e.printStackTrace();
	        } catch (IOException e) {
	            e.printStackTrace();
	        }

	        System.out.println("프로그램 종료...");
	    }

	 private static BufferedOutputStream BufferedOutputStream(FileOutputStream fos) {
		// TODO Auto-generated method stub
		return null;
	}

	 private static BufferedInputStream BufferedInputStream(FileInputStream fis) {
		// TODO Auto-generated method stub
		return null;
	 }

}
