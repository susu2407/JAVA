package app;

import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;

public class BankApp {
	
	private Scanner scanner = new Scanner(System.in); // 입력 스캐너 객체
	private List<Account> al = new ArrayList<Account>(); // 계좌 리스트
	
	// 프로그램 메인 메서드
